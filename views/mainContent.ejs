<div id="mainContent" class="" style="height: 100%;">

</div>

<script>
  window.addEventListener('DOMContentLoaded', async () => {
      const data = "mode=menu";
      const res  = await fetch('/menuGet', {
          method: 'POST',
          headers: {
              'Content-Type': 'application/x-www-form-urlencoded'
          },
          body: data
      });
      const json        = await res.json();
      const frameData   = json.frameMenu;
      const tabMenuData = json.tabMenu;
      //console.log(json);
      $("#mainContent").html(frameData);
      $("#tabMenu").html(tabMenuData);
  });
  async function menuOpenActive () {
      const data = "mode=aviaAllMenu";
      const res  = await fetch('/menuGet', {
          method: 'POST',
          headers: {
              'Content-Type': 'application/x-www-form-urlencoded'
          },
          body: data
      });
      const json        = await res.json();
      const menus       = json.datas;
      $("#allMenuData").html(menus);
  }
  cMenu = "";
  function menuShow (s) {
    $('#menu'+cMenu).hide();        
    if (cMenu != s) {
      $('#menu'+s).show();
      cMenu = s;
    } else {
      cMenu = "";
    }
  }

</script>